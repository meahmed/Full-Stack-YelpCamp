<% include ../partials/header%>

<div class="container text-center">

    <h2>Add New Comment for <%= campground.name %></h2>
    <div class="row justify-content-center">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Text">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-outline-info btn-block"> Submit </button>
            </div>
            <div>
                <a class="btn btn-large btn-primary" href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>
        </form>

    </div>

</div>

<% include ../partials/footer%>