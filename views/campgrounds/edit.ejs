<% include ../partials/header%>

<div class="container text-center">

    <h2>Edit <%=campground.name%></h2>
    <div class="row justify-content-center">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" min="1"
                    step="0.5">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]"
                    value="<%=campground.description%>">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-outline-info btn-block"> Submit </button>
            </div>
            <div>
                <a class="btn btn-large btn-primary" href="/campgrounds">Go Back</a>
            </div>
        </form>

    </div>

</div>

<% include ../partials/footer%>