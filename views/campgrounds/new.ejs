<% include ../partials/header%>

<div class="container text-center">

    <h2>Create a New Campground</h2>
    <div class="row justify-content-center">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="Price" min="1" step="0.5">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Description">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-outline-info btn-block"> Submit </button>
            </div>
            <div>
                <a class="btn btn-large btn-primary" href="/campgrounds">Go Back</a>
            </div>
        </form>

    </div>

</div>

<% include ../partials/footer%>