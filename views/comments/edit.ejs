<% include ../partials/header%>

<div class="container text-center">

    <h2>Edit Comment</h2>
    <div class="row justify-content-center">
        <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-outline-info btn-block"> Submit </button>
            </div>
            <div>
                <a class="btn btn-large btn-primary" href="/campgrounds/<%= campground_id %>">Go Back</a>
            </div>
        </form>

    </div>

</div>

<% include ../partials/footer%>